<style>
  main {
    margin: 2rem 0;
    width: 65%;
  }

  h1 {
    height: fit-content;
    margin: 0;
  }

  .light-text {
    color: rgb(var(--accent-light));
  }

  .header {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 1rem;
    margin-bottom: -1rem;
    margin-left: calc(-100px + -1rem);
  }

  .header-right {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }

  .status {
    padding: 0.2rem 0.4rem;
    background-color: rgba(var(--accent-light), 0.15);
    width: fit-content;
    height: fit-content;
    border-radius: 0.5rem;
    white-space: nowrap;
    overflow: hidden;
  }

